<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/PlayerTheme"
    android:id="@+id/playerSelectContainer">

    <androidx.appcompat.widget.Toolbar style="@style/Toolbar">
        <!-- Go back button -->
        <Button android:id="@+id/go_back"
            style="@style/Buttons.NewGame.GoBack" />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Player" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wins" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Losses" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/source_sans_pro"
            android:text="Ties" />

    </LinearLayout>

    <TextView
        android:id="@+id/no_player"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:fontFamily="monospace"
        android:text="@string/no_player"
        android:textAlignment="center"
        android:textColor="@color/pink"
        android:textSize="16sp"
        android:visibility="gone">
    </TextView>

    <ListView
        android:id="@+id/score_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>

