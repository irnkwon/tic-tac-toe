<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LandingActivity">

    <TextView
        android:id="@+id/txtLanding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_above="@id/btnOnePlayer"
        android:layout_marginBottom="30dp"
        android:text="Tic Tac Toe"
        android:textSize="30dp"
        android:textAllCaps="true" />

    <Button
        android:id="@+id/btnOnePlayer"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_centerInParent="true"
        android:textSize="16dp"
        android:text="1 Player"
        android:onClick="onBtnOnePlayerClick" />

    <Button
        android:id="@+id/btnTwoPlayers"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@id/btnOnePlayer"
        android:layout_centerInParent="true"
        android:textSize="16dp"
        android:text="2 Players"
        android:onClick="onBtnTwoPlayerClick" />

</RelativeLayout>