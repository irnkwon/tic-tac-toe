<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/PlayerTheme"
    android:id="@+id/playerSelectContainer">

    <androidx.appcompat.widget.Toolbar style="@style/Toolbar">
        <!-- Go back button -->
        <Button android:id="@+id/go_back"
            style="@style/Buttons.NewGame.GoBack" />

        <!-- New game button -->
        <Button android:id="@+id/add_player"
            style="@style/Buttons.NewGame"
            android:text="@string/add_player"
            android:onClick="showPlayerAdd"/>
    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/no_player"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:fontFamily="monospace"
        android:text="@string/no_player"
        android:textAlignment="center"
        android:textColor="@color/pink"
        android:textSize="16sp"
        android:visibility="gone">
    </TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/players"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="vertical" />

</LinearLayout>

