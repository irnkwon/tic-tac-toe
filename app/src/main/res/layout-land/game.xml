<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/PlayerTheme.H">

    <androidx.appcompat.widget.Toolbar style="@style/Toolbar">
        <!-- Go back button -->
        <Button android:id="@+id/go_back"
            style="@style/Buttons.NewGame.GoBack" />

        <!-- New game button -->
        <Button android:id="@+id/new_game"
            style="@style/Buttons.NewGame" />
    </androidx.appcompat.widget.Toolbar>

    <!-- Buttons for Tic Tac Toe -->
    <!-- Row 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <LinearLayout
            style="@style/OContainer"
            >
            <TextView
                android:id="@+id/oTurnTxt"
                style="@style/PlayerText"
                >
            </TextView>
            <ImageView
                android:id="@+id/oImage"
                style="@style/OXImage"
                app:srcCompat="@drawable/o"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout style="@style/RowContainer.H">
                <LinearLayout style="@style/PlayerButtonContainer.H">

                    <Button
                        android:id="@+id/button00"
                        style="@style/Buttons.PlayerButton.H" />
                </LinearLayout>

                <LinearLayout style="@style/PlayerButtonContainer.H">
                    <Button
                        android:id="@+id/button01"
                        style="@style/Buttons.PlayerButton.H" />
                </LinearLayout>

                <LinearLayout style="@style/PlayerButtonContainer.H">
                    <Button
                        android:id="@+id/button02"
                        style="@style/Buttons.PlayerButton.H" />
                </LinearLayout>
            </LinearLayout>

            <!-- Row 2 -->
            <LinearLayout style="@style/RowContainer.H">
                <LinearLayout style="@style/PlayerButtonContainer.H">
                    <Button
                        android:id="@+id/button10"
                        style="@style/Buttons.PlayerButton.H" />
                </LinearLayout>

                <LinearLayout style="@style/PlayerButtonContainer.H">
                    <Button
                        android:id="@+id/button11"
                        style="@style/Buttons.PlayerButton.H" />
                </LinearLayout>

                <LinearLayout style="@style/PlayerButtonContainer.H">
                    <Button
                        android:id="@+id/button12"
                        style="@style/Buttons.PlayerButton.H" />
                </LinearLayout>
            </LinearLayout>

            <!-- Row 3 -->
            <LinearLayout style="@style/RowContainer.H">
                <LinearLayout style="@style/PlayerButtonContainer.H">
                    <Button
                        android:id="@+id/button20"
                        style="@style/Buttons.PlayerButton.H" />
                </LinearLayout>

                <LinearLayout style="@style/PlayerButtonContainer.H">
                    <Button
                        android:id="@+id/button21"
                        style="@style/Buttons.PlayerButton.H" />
                </LinearLayout>

                <LinearLayout style="@style/PlayerButtonContainer.H">
                    <Button
                        android:id="@+id/button22"
                        style="@style/Buttons.PlayerButton.H" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout style="@style/OContainer.X.H">
            <TextView
                android:id="@+id/xTurnTxt"
                style="@style/PlayerText.X">
            </TextView>
            <ImageView
                android:id="@+id/xImage"
                style="@style/OXImage"
                app:srcCompat="@drawable/x" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

