<resources>

    <!--
        Landing theme
    -->

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="AppTheme.H" parent="Theme.AppCompat.NoActionBar">
        <item name="android:gravity">center</item>
    </style>

    <style name="Logo">
        <item name="android:layout_width">338dp</item>
        <item name="android:layout_height">183dp</item>
        <item name="android:src">@drawable/logo</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_above">@id/btnStartGame</item>
    </style>

    <style name="Buttons">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@color/pink</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <style name="Buttons.Second">
        <item name="android:layout_marginTop">13dp</item>
    </style>

    <!--
        Player theme - Vertical
    -->

    <style name="PlayerTheme">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="OXContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_margin">30dp</item>
    </style>

    <style name="OContainer">
        <item name="android:layout_width">89dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="OContainer.X">
        <item name="android:layout_marginLeft">150dp</item>
    </style>

    <style name="OXImage">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="PlayerText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textColor">@color/pink</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="PlayerText.X">
        <item name="android:text">@string/turn</item>
    </style>

    <style name="RowContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">3</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="PlayerButtonContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="PlayerButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/pink</item>
        <item name="android:layout_margin">3dp</item>
    </style>

    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:background">@color/pink</item>
    </style>

    <style name="Buttons.NewGame">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/new_game</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>

    <style name="Buttons.NewGame.GoBack">
        <item name="android:text">@string/go_back</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:onClick">onBtnGoBackClick</item>
    </style>

    <!--
        Player theme - Horizontal
    -->

    <style name="PlayerTheme.H">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="OContainer.X.H">
        <item name="android:layout_marginLeft">0dp</item>
    </style>

    <style name="RowContainer.H">
        <item name="android:layout_width">280dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="PlayerButtonContainer.H">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="PlayerButton.H">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

</resources>
